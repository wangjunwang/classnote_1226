export class ThemePalette {
  bgGradient: [string | Resource, number][] = []
  card: string | Resource = ''
  textPrimary: string | Resource = ''
  textSecondary: string | Resource = ''
  divider: string | Resource = ''
  inputBg: string | Resource = ''
  placeholder: string | Resource = ''
  dockBg: string | Resource = ''
  shadow: string | Resource = ''
  heroGradient: [string | Resource, number][] = []
  funcGradient: [string | Resource, number][] = []
}

export class ThemeColors {
  primary: string | Resource = ''
  // å…¼å®¹æ—§ä»£ç çš„å ä½ç¬¦ï¼Œå®é™…ä¼šèµ° ThemeConfig
  accent: string | Resource = ''
  accentLight: string | Resource = ''
  light: ThemePalette = new ThemePalette()
  dark: ThemePalette = new ThemePalette()
}

export class ThemeLayout {
  radius: number = 0
  cardPadding: number = 0
}

export class Theme {
  static readonly layout: ThemeLayout = {
    radius: 24,
    cardPadding: 20
  }

  // [æ ¸å¿ƒæ–¹æ³•] è·å–å½“å‰ä¸»é¢˜è‰²
  static getStyle(themeName: string): ThemeColorSet {
    return ThemeConfig[themeName] || ThemeConfig['orange'];
  }

  static readonly colors: ThemeColors = {
    primary: '#007DFF',
    accent: '#FF8800',
    accentLight: '#FFF0D6',

    light: {
      bgGradient: [['#FEF9F5', 0.0], ['#F2F3F5', 1.0]],
