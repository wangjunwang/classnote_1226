      textSecondary: '#94A3B8',
      divider: '#F1F5F9',
      inputBg: '#F5F7FA',
      placeholder: '#999999',
      dockBg: 'rgba(255,255,255,0.85)',
      shadow: 'rgba(59, 130, 246, 0.05)',
      heroGradient: [['#FF8800', 0.0], ['#FFBB00', 1.0]],
      funcGradient: [['#FF9F40', 0.0], ['#FFC880', 1.0]]
    },

    dark: {
      bgGradient: [['#1A1A1A', 0.0], ['#000000', 1.0]],
